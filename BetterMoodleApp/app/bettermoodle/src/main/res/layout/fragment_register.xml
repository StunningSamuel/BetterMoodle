<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="650dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Total Credit Hours:"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:id="@+id/totalhours"
            android:textSize="17sp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Billing Hours:"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:id="@+id/billinghours"
            android:textSize="17sp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Minimum Hours:"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:id="@+id/minhours"
            android:textSize="17sp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Maximum Hours:"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginTop="105dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:id="@+id/maxhours"
            android:textSize="17sp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="17sp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_marginTop="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April 9, 2024 12:42 PM"
            android:id="@+id/datevar"
            android:textSize="17sp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/comfortaacegular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/comfortaacegular"
            android:textStyle="bold"
            android:text="CRNS:">

        </TextView>

        <EditText
            android:background="@drawable/loginwrapper"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/CRN1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN1">

        </EditText>

        <EditText
            android:background="@drawable/loginwrapper"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/CRN2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN2">

        </EditText>

        <EditText
            android:background="@drawable/loginwrapper"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/CRN3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN3">

        </EditText>

        <EditText
            android:background="@drawable/loginwrapper"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/CRN4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN4">

        </EditText>

        <EditText
            android:layout_marginTop="260dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/CRN5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/loginwrapper"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN5">

        </EditText>

        <EditText
            android:layout_marginTop="260dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/CRN6"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/loginwrapper"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN6">

        </EditText>

        <EditText
            android:layout_marginTop="310dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/CRN7"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/loginwrapper"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN7">

        </EditText>

        <EditText
            android:layout_marginTop="310dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/CRN8"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/loginwrapper"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN8">

        </EditText>

        <EditText
            android:layout_marginTop="310dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/CRN9"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/loginwrapper"
            android:fontFamily="@font/comfortaacegular"
            android:hint="CRN9">

        </EditText>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/comfortaacegular"
            android:textStyle="bold"
            android:id="@+id/submitbutton"
            android:backgroundTint="@color/MoodleOrange"
            android:layout_marginLeft="10dp"
            android:text="Submit">
        </Button>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/comfortaacegular"
            android:textStyle="bold"
            android:id="@+id/class_search"
            android:backgroundTint="@color/MoodleOrange"
            android:layout_marginLeft="150dp"
            android:text="Class Search">
        </Button>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/comfortaacegular"
            android:textStyle="bold"
            android:id="@+id/resetbutton"
            android:backgroundTint="@color/MoodleOrange"
            android:layout_marginLeft="290dp"
            android:text="Reset">
        </Button>




    </androidx.cardview.widget.CardView>











</LinearLayout>